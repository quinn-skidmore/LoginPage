<LoginManager>:
    StartScreen:
        name: "start"
    CreateScreen:
        name: "create"
    LoginScreen:
        name: "login"

<StartScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 100
        padding: 150
        Button:
            anchor_x: "center"
            font_size: 48
            text: "Create"
            size_hint: 1, 0.5
            on_release: root.create()
        Button:
            font_size: 48
            text: "Sign In"
            size_hint: 1, 0.5
            on_release: root.login()

<CreateScreen>:
    BoxLayout:
        padding: 100
        spacing: 100
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Username:"
                TextInput:
                    id: username
                    font_size: 48
                    hint_font_size: 40

            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Password:"
                TextInput:
                    id: password
        Label:
            text: "Password must include:\n 1. A capitalized letter \n 2. A number \n 3. A symbol \n 4. At least 8 characters \n 5. A lowercase letter"
        Button:
            text: "Create Account"
            size_hint: 1, 0.5

